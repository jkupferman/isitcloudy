<% html_class "response" %>

<div id="answer">
  <% if @website.on_cloud? %>
    <% body_class "positive" %>
    <h3 class="main">Yes.</h3>
    <h3 class="rest">It is on <%= @website.cloud_name %>.</h3>
  <% else %>
    <% body_class "negative" %>
    <h3 class="main">No.</h3>
    <h3 class="rest">It is not.</h3>
  <% end %>
</div>

<div id="another">
  <%= link_to "Try Another?", new_website_path %>
</div>
